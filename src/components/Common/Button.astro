---
const { type, text, variant } = Astro.props;
const style =
  "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800";
const base = "w-auto h-auto rounded-lg";
---

<button
  type={type}
  class={`${
    variant === "sm"
      ? "p-2"
      : variant === "md"
      ? "p-4"
      : variant === "lg"
      ? "p-6"
      : ""
  } ${base} ${style} `}>{text}</button
>
